rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check user role
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isUser() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'user';
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - all authenticated users can read their own document
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Allow users to create their own document (first time login)
      allow create: if isAuthenticated() && request.auth.uid == userId && 
                       request.resource.data.role == 'user';
      // Allow users to update their own document (last login time, profile)
      allow update: if isAuthenticated() && request.auth.uid == userId && 
                       request.resource.data.role == resource.data.role; // Can't change their own role
      // Admins can read/write all user documents
      allow read, write: if isAdmin();
    }
    
    // Admin-only collections (you can add specific collections here)
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // User data collections (accessible by regular users from Flutter app)
    // Example: water readings, usage data, etc.
    match /water_readings/{document=**} {
      // Users can read/write their own data
      allow read, write: if isUser() && resource.data.userId == request.auth.uid;
      // Admins can read/write all data
      allow read, write: if isAdmin();
    }
    
    match /user_data/{userId}/{document=**} {
      // Users can access their own data
      allow read, write: if isUser() && userId == request.auth.uid;
      // Admins can access all user data
      allow read, write: if isAdmin();
    }
    
    // Service requests collection
    match /service_requests/{requestId} {
      // Users can create service requests
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can read their own service requests
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Admins can read/write all service requests
      allow read, write: if isAdmin();
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}